<div class="col-md-4 col-md-offset-4">
  <h2 class="text-center sign_up">Sign In</h2>

  <%= form_tag sign_in_path do %>
    <div class="form-group">
      <%= label_tag :email %>
      <%= email_field_tag :email, nil, :placeholder => "Email", :required => true, :class => "form-control" %>
    </div>

    <div class="form-group">
      <%= label_tag :password %>
      <%= password_field_tag :password, nil, :class => "form-control", :placeholder => "Password",  :required => true %>
    </div>

    <div class="form-group">
      <%= submit_tag "Create Account", :class => "btn btn-default btn-block" %>
    </div>
  <% end  %>
</div>
